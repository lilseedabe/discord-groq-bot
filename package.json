{
  "name": "discord-groq-bot",
  "version": "2.1.0",
  "description": "Secure Discord bot with Groq AI integration",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "echo \"No tests specified\" && exit 0",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop discord-groq-bot",
    "pm2:restart": "pm2 restart discord-groq-bot",
    "pm2:logs": "pm2 logs discord-groq-bot",
    "pm2:monit": "pm2 monit",
    "deploy:setup": "chmod +x deploy-vps.sh && ./deploy-vps.sh",
    "db:migrate": "node -e \"require('./src/db').initializeDatabase().then(() => process.exit(0))\""
  },
  "dependencies": {
    "discord.js": "^14.21.0",
    "dotenv": "^16.6.1",
    "groq-sdk": "^0.27.0",
    "pg": "^8.11.3",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "pm2": "^5.3.0"
  },
  "keywords": [
    "discord",
    "bot",
    "groq",
    "ai",
    "secure"
  ],
  "author": "Nako",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}